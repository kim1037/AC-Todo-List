<ul  class="list-group">
  {{#each todos}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-auto me-auto">
          <input class="me-2" type="checkbox" name="isDone" {{#if this.isDone}}checked{{/if}} style="vertical-align: middle;" disabled>
           <h5 style="display: inline; vertical-align: middle;">
             {{this.name}}
           </h5>
        </div>
        <div class="col-auto">
          <a class="btn btn-secondary" href="./todos/{{this._id}}">Detail</a>
          <a class="btn btn-primary" href="./todos/{{this._id}}/edit">Edit</a>
          <form
            action="./todos/{{this._id}}?_method=DELETE"
            method="POST"
            style="display: inline;"
          >
            <button class="btn btn-danger" type="submit">delete</button>
          </form>
        </div>
      </div>
    </li>
  {{/each}}
</ul>